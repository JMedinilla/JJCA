<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="PartTitle">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">18sp</item>
        <item name="android:padding">6dp</item>
        <item name="android:fontFamily">@font/arial_narrow_bold_italic</item>
    </style>

    <style name="PartTitleStart" parent="PartTitle">
        <item name="android:gravity">center_vertical|start</item>
    </style>

    <style name="PartTitleEnd" parent="PartTitle">
        <item name="android:gravity">center_vertical|end</item>
    </style>

    <style name="PartColorBox">
        <item name="android:textSize">45sp</item>
        <item name="android:padding">15dp</item>
    </style>

    <style name="PartBackground">
        <item name="android:textSize">72sp</item>
        <item name="android:padding">24dp</item>
    </style>

</resources>
